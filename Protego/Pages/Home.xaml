<Page x:Class="Protego.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="800"
      Title="Home"
      x:Name="HomePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:CardAction Grid.Column="0" 
                       Grid.Row="1" 
                       Width="235" 
                       IsChevronVisible="False" 
                       Height="200">
            <StackPanel>
                <TextBlock Text="Sa monitor" 
                           FontSize="25" 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Center" />
            </StackPanel>
        </ui:CardAction>


        <ui:CardAction Grid.ColumnSpan="2" 
                       Height="200" 
                       VerticalContentAlignment="Top" 
                       IsChevronVisible="False"
                       Width="480">
            <StackPanel>
                <TextBlock FontSize="20"
                       Text="DASHBOARD" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"  
                       Foreground="White"/>
                <TextBlock FontSize="30"
                        Text="Stay Sharp" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"  
                       Foreground="White"/>
                <TextBlock FontSize="30"
                       Text="Stay Safe" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"  
                       Foreground="White"/>
                <TextBlock FontSize="30"
                       Text="No Room for Scams and Fraud" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"  
                       Foreground="White"/>
            </StackPanel>
        </ui:CardAction>

        <ui:CardAction Grid.Column="2" Width="235" IsChevronVisible="False" Height="200">

            <StackPanel>
                <Image Source="\Assets\usb-64.png" Width="100" Height="100" />
                <TextBlock Text="Protect yourself from USB baiting" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center" />
            </StackPanel>
        </ui:CardAction>

        <ui:CardAction Grid.Column="1" Grid.Row="1" Width="235" IsChevronVisible="False" Height="200">
            <Grid>
                <TextBlock Text="sa monitor storage" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
        </ui:CardAction>
        <ui:CardAction Grid.Column="2" Grid.Row="1" Width="235" IsChevronVisible="False" Height="200">
            <Grid Height="164">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <TextBlock Text="Sa scan" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center" />
                <ui:Button Content="Scan" Width="150" HorizontalAlignment="Center" VerticalContentAlignment="Bottom" Background="#1D84B5" MouseOverBackground="#1D84B5" Grid.Row="1" Margin="0,45,0,0" VerticalAlignment="Top"/>
            </Grid>
        </ui:CardAction>


    </Grid>
</Page>
