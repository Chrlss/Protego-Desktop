                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">

                </Grid>
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander Padding="5" ContentPadding="0" Margin="10,10,10,0" Grid.Row="3" VerticalAlignment="Top">
            <ui:CardExpander.Header>
                <Grid Height="48">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="Protego - New CardExpander" FontTypography="Body" FontSize="20" Margin="10,0,0,0"/>
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>                
                <TextBlock Text="This is the content for the new CardExpander."/>
            </StackPanel>
        </ui:CardExpander>

        <ui:CardExpander Padding="5" ContentPadding="0" Margin="10,10,10,0" Grid.Row="4" VerticalAlignment="Top">
