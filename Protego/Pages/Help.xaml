                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image Source="\Assets\Protego_logo.ico" Width="50" Height="50" Margin="-2,0,74,0"/>
