<Page x:Class="Protego.Pages.Help"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Protego.Pages"
      xmlns:userControl="clr-namespace:Protego.UserControls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Help">

    <Border>
        <Border.Background>
            <ImageBrush ImageSource="\Assets\Protego_logo.png" Stretch="UniformToFill" Opacity=".3"/>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="About us" HorizontalAlignment="Left"  Foreground="White" FontSize="40" Margin="261,10,0,388" Grid.Column="1" Width="160"/>
            <TextBlock Text="Welcome to Protego! We are a team of dedicated students who share a common goal: protecting users from phishing and flash drive baiting attacks. As cyber threats continue to evolve, our mission is to create effective solutions that shield individuals and organizations from potentially harmful attacks that could compromise sensitive information."
                       TextWrapping="Wrap"
                       Foreground="white" Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" Height="202" Width="500" FontSize="20"/>
            <ui:SymbolIcon Symbol="Globe32" Foreground="White"/>
        </Grid>
    </Border>
</Page>
