<Page x:Class="Protego.Pages.Help"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Protego.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Help">

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <ui:Button Width="200"  Height="66"  Margin="0,45,0,0"  VerticalAlignment="Top" HorizontalAlignment="Center" MouseOverBackground="#1D84B5">
            <Grid>
                <TextBlock Text="Guides" FontSize="25"/>
            </Grid>
        </ui:Button>

        <ui:Button Grid.Column="1" Width="200"
                   Height="65"  Margin="0,46,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MouseOverBackground="#1D84B5">
            <Grid>
                <TextBlock Text="Privacy Policy" FontSize="25"/>
            </Grid>
        </ui:Button>

        <ui:Button Grid.Column="2" Width="200"  
                   Height="65"  Margin="0,46,0,0"  VerticalAlignment="Top" HorizontalAlignment="Center" MouseOverBackground="#1D84B5">
            <Grid>
                <TextBlock Text="FAQ" FontSize="25"/>
            </Grid>
        </ui:Button>
    </Grid>
</Page>
