                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">
                    <ui:TextBlock Text="University of Caloocan City" Foreground="White"/>
                    <ui:TextBlock Text="BSCS 4 A/B" Foreground= "White" Margin="590,0,0,0"/>
                </Grid>

                <Grid Margin="16">
                    <TextBlock Text="Protego - v1.0.0.0" Foreground="White"/>
