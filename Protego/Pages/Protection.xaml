<Page x:Class="Protego.Pages.Protection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Protection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ui:Button Grid.Column="0" Width="200
                   "  Height="55" Click="CardAction_Click" Margin="16,32,16,0" VerticalAlignment="Top" MouseOverBackground="#1D84B5">

            <StackPanel>
                <TextBlock Text="Scan" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center">
                    <ui:SymbolIcon Symbol="ScanDash28" Width="20" Height="20" />
                </TextBlock>
            </StackPanel>
        </ui:Button>

        <ui:Button Grid.Column="1" Width="200
                   "  Height="55" Click="CardAction_Click" Margin="16,32,16,0" VerticalAlignment="Top">

            <StackPanel>
                <TextBlock Text="Backup" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center">
             <ui:SymbolIcon Symbol="Cloud24" Width="49" Height="21" />
                </TextBlock>
            </StackPanel>
        </ui:Button>

        <ui:Button Grid.Column="2" Width="200
                   "  Height="55" Click="CardAction_Click" Margin="16,32,16,0" VerticalAlignment="Top">

            <StackPanel>
                <TextBlock Text="USB Baiting" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center">
     <ui:SymbolIcon Symbol="UsbPlug20"  Width="49" Height="21" />
                </TextBlock>
            </StackPanel>
        </ui:Button>




    </Grid>
</Page>
