<Page x:Class="Protego.Pages.Protection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Protection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MainContent" Grid.Column="0" Grid.ColumnSpan="3"/>

        <ui:Button Grid.Column="0" Width="200" Height="55" Margin="16,32,16,0" VerticalAlignment="Top" MouseOverBackground="#1D84B5" HorizontalAlignment="Center" Click="Button_Click">
            <Grid>
                <TextBlock Text="Scan" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-16,0,0,0"/>
                <Image Source="\Assets\scan-64.png" Width="30" Height="30" Margin="41,3,-18,0" />
            </Grid>
        </ui:Button>

        <ui:Button Grid.Column="1" Width="200"  Height="55" Margin="16,32,16,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Grid>
                <TextBlock Text="Backup" FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-31,-2,0,0"/>
                <Image Source="\Assets\cloud-100.png" Width="30" Height="30" Margin="54,1,-35,0"/>
            </Grid>
        </ui:Button>

        <ui:Button Grid.Column="2" Width="200"  Height="55" Margin="16,32,16,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Grid>
                <TextBlock Text="USB Baiting" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-16,0,0,0"/>
                <Image Source="\Assets\usb-64.png" Width="30" Height="30" Margin="87,1,-14,-1" />
            </Grid>
        </ui:Button>



        
    </Grid>
</Page>
