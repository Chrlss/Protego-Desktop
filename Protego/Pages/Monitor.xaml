<Page x:Class="Protego.Pages.Monitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Monitor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:CardAction Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Width="360" IsChevronVisible="False" Height="200">
            <Grid>
                <TextBlock x:Name="LblClock"  FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
        </ui:CardAction>
        <ui:CardAction Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="0" Width="360" IsChevronVisible="False" Height="200">
            <Grid>
                <TextBlock x:Name="LblSku" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
        </ui:CardAction>
        <ui:CardAction Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Width="509" IsChevronVisible="False" Height="200" HorizontalAlignment="Right" Margin="0,2,4,0" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="sa monitor storage" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
        </ui:CardAction>
        <ui:CardAction Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Width="217" IsChevronVisible="False" Height="200" HorizontalAlignment="Left" Margin="4,2,0,0" VerticalAlignment="Top">
            <Grid>
                <TextBlock x:Name="LblStatus" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </Grid>
        </ui:CardAction>

    </Grid>
</Page>
