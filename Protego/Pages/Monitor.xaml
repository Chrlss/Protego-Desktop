<Page 
      x:Class="Protego.Pages.Monitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Monitor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition />
            <ColumnDefinition  />
            <ColumnDefinition />


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:CardAction Grid.Column="0" Grid.ColumnSpan="2" IsEnabled="False" IsChevronVisible="False" Height="210" Margin="12,15,80,0" VerticalAlignment="Top"/>
        <ui:CardAction Grid.Column="1" Grid.ColumnSpan="3" IsEnabled="False" IsChevronVisible="False" Height="210" Margin="120,15,160,0" VerticalAlignment="Top"/>
        <ui:CardAction Grid.Column="3" IsEnabled="False" IsChevronVisible="False" Height="210" Margin="38,15,10,0" VerticalAlignment="Top"/>

        <ui:CardExpander ContentPadding="0" Grid.ColumnSpan="4" Margin="11,10,10,0" VerticalAlignment="Top" Grid.Row="1">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    FontTypography="Body"
                    Text="PROCIE" />

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                    x:Name="LblProcie"
                    Grid.Column="0" Grid.ColumnSpan="2" Margin="519,-10,-519,10"/>
                    <TextBlock
                    Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                    Text="CPU" Margin="0,0,591,0" />
                </Grid>
                <ui:Anchor
                Margin="0"
                Padding="16"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0,1,0,0"
                CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Clock" />

                        <TextBlock
                        x:Name="LblClock"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Grid.ColumnSpan="2" Margin="489,2,-489,-1"/>

                    </Grid>
                </ui:Anchor>
            </StackPanel>
        </ui:CardExpander>
        <ui:CardExpander ContentPadding="0" Grid.ColumnSpan="4" Margin="12,80,9,0" VerticalAlignment="Top" Grid.Row="1">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="RAM" />

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="LblTotaRam"
                        Grid.Column="0" Grid.ColumnSpan="2" Margin="519,-10,-519,10"/>
                    <TextBlock
                        Foreground="White"
                        Text="Total RAM" Margin="0,0,591,0" />
                </Grid>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Clock" />

                        <TextBlock
                            x:Name="LblRamSpeed"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Grid.ColumnSpan="2" Margin="489,2,-489,-1"/>

                    </Grid>
                </ui:Anchor>
            </StackPanel>
        </ui:CardExpander>
        <ui:CardExpander ContentPadding="0" Grid.ColumnSpan="4" Margin="12,157,9,0" VerticalAlignment="Top" Grid.Row="1">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="Storage" />

                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="LblTotalStorage"
                        Grid.Column="0" Grid.ColumnSpan="2" Margin="519,-10,-519,10"/>
                    <TextBlock
                        Foreground="White"
                        Text="Total Storage" Margin="0,0,591,0" />
                </Grid>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Free Storage" />

                        <TextBlock
                            x:Name="LblFreeStorage"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Grid.ColumnSpan="2" Margin="489,2,-489,-1"/>

                    </Grid>
                </ui:Anchor>
            </StackPanel>
        </ui:CardExpander>
    </Grid>
</Page>