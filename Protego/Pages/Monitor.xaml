<Page x:Class="Protego.Pages.Monitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Protego.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Monitor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                BorderBrush="Gray" 
                BorderThickness="0" 
                CornerRadius="5,5,5,5" 
                Margin="10,0,0,0"
                Width="250"
                Height="180"
                HorizontalAlignment="Left">
            <Button Width="250"
                    Height="180" HorizontalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Text="Sa storage to" 
                       FontWeight="Bold" 
                       FontSize="16"/>
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Column="2" 
                Grid.ColumnSpan="3"
                BorderBrush="Gray" 
                BorderThickness="0" 
                CornerRadius="5,5,5,5" 
                Margin="5"
                Width="380"
                Height="190">
            <Button Width="380"
                    Height="190">
                <StackPanel Margin="10">
                    <TextBlock Text="walang nakalagay" 
                       FontWeight="Bold" 
                       FontSize="16"/>
                </StackPanel>
            </Button>
        </Border>

        <Border Grid.Column="0" 
                Grid.ColumnSpan="2" 
                BorderBrush="Gray" 
                BorderThickness="0" 
                CornerRadius="5,5,5,5" 
                Margin="5"
                Width="380"
                Height="190">
            <Button Width="380"
                    Height="190" 
                    HorizontalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Text="sa monitor to" 
                        FontWeight="Bold" 
                        FontSize="16"/>
                </StackPanel>
            </Button>
        </Border>
        
        <Border Grid.Row="1"
                Grid.Column="1" 
                Grid.ColumnSpan="3"
                BorderBrush="Gray" 
                BorderThickness="0" 
                CornerRadius="5,5,5,5" 
                Margin="5,0,10,0"
                Width="515"
                Height="180"
                HorizontalAlignment="Right">
            <Button Width="515"
                    Height="180">
                <StackPanel Margin="10">
                    <TextBlock Text="walay nakalagay" 
                        FontWeight="Bold" 
                        FontSize="16"/>
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</Page>
